<%= form_for(@book, url: yield(:url_form)) do |b| %>
	
	<!-- cover book -->
	<div class="center">
		<div class="img-book" style="margin-bottom: 20px;">
			<%= image_tag @book.cover.url  if @book.cover? %>
		</div>
	</div>

	<%= b.label :cover %>
	<%= b.file_field :cover, accept: "image/jpeg, image/gif, image/png, image/jpg" %>

  	<%= b.label :name %>
  	<%= b.text_field :name, class: 'form-control' %>

  	<%= b.label :description %>
  	<%= b.text_field :description, class: 'form-control' %>

  	<div class="button-actions">
	  	<a href="/books" title="Back" class="btn btn-default">Back</a>
  		<button class="btn btn-primary" title="Submit" type="submit"><%= yield(:button_text) %></button>
  	</div>
<% end %>

<script type="text/javascript">
	$("#book_cover").bind("change", function(){
    	var size_in_megabytes = this.files(0).size/1024/1024;
        if (size_in_megabytes > 1) {
        	alert("Maximum file size is 1MB. Please choose an other file!");
        }
    });
</script>