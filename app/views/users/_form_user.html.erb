<%= form_for(@user) do |f| %>

	<!-- cover book -->
	<div class="center">
		<div class="img-book" style="margin-bottom: 20px;">
			<% if @user.avatar? %>
				<%= image_tag @user.avatar.url %>
			<% else %>
				<%= link_to gravatar_for(@user, size: 120), @user %>
			<% end %>
		</div>
	</div>
	
	<%= f.label :avatar %>
	<%= f.file_field :avatar, accept: "image/jpeg, image/gif, image/png, image/jpg" %>

  	<%= f.label :username %>
  	<%= f.text_field :username, class: 'form-control' %>

  	<%= f.label :email %>
  	<%= f.email_field :email, class: 'form-control' %>

  	<%= f.label :password %>
  	<%= f.password_field :password, class: 'form-control' %>

  	<%= f.label :password_confirmation %>
  	<%= f.password_field :password_confirmation, class: 'form-control' %>

  	<div class="button-actions">
	  	<a href="/users" title="Back" class="btn btn-default">Back</a>
  		<button class="btn btn-primary" title="Submit" type="submit"><%= yield(:button_text) %></button>
  	</div>
<% end %>

<script type="text/javascript">
	$("#user_avatar").bind("change", function(){
    	var size_in_megabytes = this.files(0).size/1024/1024;
        if (size_in_megabytes > 1) {
        	alert("Maximum file size is 1MB. Please choose an other file!");
        }
    });
</script>